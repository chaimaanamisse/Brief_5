# on démare le moteur de réecriture
RewriteEngine On

# On réécrit l'URL 

RewriteRule ^([a-zA-Z0-9\-\_\/]*)$ index.php?p=$1 

# entre[] tout ce qui est autorisé dans l'URL ensuite en redirege vers index.php?p= et on lui envoie tout ce qui l'a trouvé entre[] juste après en mettant $1

# interpretation des URLs et les passer directement dans les params